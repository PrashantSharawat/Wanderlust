<% layout("/layouts/boilerplate")-%>

    <body>

        <div class="row mt-3">
            <div class="col-8 offset-2">

                <h3>Create a New listing</h3>

                <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data" >

                    <div class="mb-2">
                        <label for="title" class="form-label">Title</label>
                        <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required/>
                        <div class="valid-feedback">Title looks good !</div>
                         <div class="invalid-feedback">Please fill correct Title!</div>
                    </div>
                    
                    <div class="mb-2">
                        <label for="Description" class="form-label">Description</label>
                        <textarea name="listing[description]" placeholder="enter description" class="form-control" required></textarea>
                        <div class="invalid-feedback">Description should be valid</div>
                    </div>

                    <!-- <div class="mb-2">
                        <label for="image" class="form-label">Image Link</label>
                        <input name="listing[image]" placeholder="enter image URL/Link" type="text" class="form-control" />
                    </div> -->

                    <div class="mb-2">
                        <label for="image" class="form-label">Upload Listing Image </label>
                        <input name="listing[image]" placeholder="" type="file" class="form-control" />
                        required
                    </div>

                    <div class="row">
                        <div class="mb-2 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input name="listing[price]" placeholder="enter price" class="form-control" required />
                            <div class="invalid-feedback">Price should be valid</div>
                        </div>
                        
                        <div class="mb-2 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required />
                            <div class="invalid-feedback">country should be valid</div>
                        </div>
                    </div>

                    <div class="mb-2">
                        <label for="location" class="form-label">Location</label>
                        <input name="listing[location]" placeholder="enter location" type="text" class="form-control" required/>
                        <div class="invalid-feedback">location should be valid</div>
                    </div>

                    <button class="btn btn-dark add-btn mt-3" >create (+add new listing)</button>
                    
                </form>

            </div>

           
        </div>

    </body>
